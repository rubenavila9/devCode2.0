<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="5dp"
    android:background="@color/grayWhite"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_denunciado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/UserDenunciado"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:text="@string/profile"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="13"
                    android:layout_height="wrap_content"
                    android:text="@string/CantidadDenuncia"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/nivel"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    tool:text="@string/nivel"
                    android:textSize="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/CantidadDenuncias"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tituloDenuncia"
                android:textSize="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/MensajeDenunciado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PublicaciÃ³n"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>